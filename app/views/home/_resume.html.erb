<div class="bg-white shadow rounded-lg p-4">
  <div class="flex items-center mb-4">
    <%= image_tag resume.user.avatar.variant(resize_to_fill: [50, 50]), class: "rounded-full mr-4" if resume.user.avatar.attached? %>
    <div>
      <h2 class="text-xl font-semibold"><%= resume.user.full_name %></h2>
      <p class="text-gray-600"><%= resume.title %></p>
    </div>
  </div>
  <%= link_to "View CV", resume_path(resume), class: "text-blue-500 hover:underline" %>
</div>