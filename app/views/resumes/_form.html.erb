<%= form_with(model: resume, local: true, class: 'space-y-6') do |f| %>
  <% if resume.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(resume.errors.count, "error") %> prohibited this resume from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% resume.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_field :title, class: 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div>
    <%= f.label :description, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.rich_text_area :description, class: 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div>
    <%= f.label :hobbies, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_area :hobbies, rows: 3, class: 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div>
    <%= f.label :file, "Upload Resume", class: 'block text-sm font-medium text-gray-700' %>
    <%= f.file_field :file, class: 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', accept: 'application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document' %>
    <p class="mt-2 text-sm text-gray-500">Upload a PDF or Word document (max 5MB)</p>
  </div>

  <div class="flex items-center">
    <%= f.check_box :active, class: 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded' %>
    <%= f.label :active, class: 'ml-2 block text-sm text-gray-900' %>
  </div>

  <div data-nested-form-target="add_item">
    <%= f.fields_for :resume_schools do |school_form| %>
      <%= render 'resume_school_fields', f: school_form %>
    <% end %>
  </div>

  <div class="mt-2">
    <%= link_to 'Add School', '#', 
        class: 'inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500', 
        data: { action: "click->nested-form#add_association" } %>
  </div>

  <template data-nested-form-target="template">
    <%= f.fields_for :resume_schools, ResumeSchool.new, child_index: 'NEW_RECORD' do |school_form| %>
      <%= render 'resume_school_fields', f: school_form %>
    <% end %>
  </template>

  <div class="mt-6">
    <%= f.submit class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>