<% resumes.each do |resume| %>
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <h3 class="text-lg leading-6 font-medium text-gray-900"><%= resume.title %></h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        <%= resume.active ? 'Active' : 'Inactive' %>
      </p>
      <div class="mt-4 flex justify-between">
        <%= link_to 'View', resume_path(resume), class: 'text-indigo-600 hover:text-indigo-900' %>
        <%= link_to 'Edit', edit_resume_path(resume), class: 'text-indigo-600 hover:text-indigo-900' %>
        <%= link_to 'Delete', resume_path(resume), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-900' %>
      </div>
    </div>
  </div>
<% end %>