<div class="max-w-4xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold mb-6 text-gray-800 border-b pb-2"><%= @resume.title %></h1>

  <div class="mb-8">
    <h2 class="text-2xl font-semibold mb-4 text-gray-700">Kişisel Bilgiler</h2>
    <div class="bg-gray-50 p-4 rounded">
      <p class="mb-2"><strong>Ad Soyad:</strong> <%= @resume.user.full_name %></p>
      <p class="mb-2"><strong>E-posta:</strong> <%= @resume.user.email %></p>
      <p class="mb-2"><strong>Telefon:</strong> <%= @resume.user.gsm || "Belirtilmemiş" %></p>
      <p><strong>Adres:</strong> <%= @resume.user.country || "Belirtilmemiş" %></p>
    </div>
  </div>

  <div class="mb-8">
    <h2 class="text-2xl font-semibold mb-4 text-gray-700">CV İçeriği</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <h3 class="font-semibold text-gray-700">Açıklama</h3>
        <p class="bg-gray-50 p-3 rounded text-gray-600"><%= @resume.description.presence || "Açıklama yok" %></p>
      </div>
      <div>
        <h3 class="font-semibold text-gray-700">Hobiler</h3>
        <p class="bg-gray-50 p-3 rounded text-gray-600"><%= @resume.hobbies.presence || "Hobi belirtilmemiş" %></p>
      </div>
      <div>
        <h3 class="font-semibold text-gray-700">Durum</h3>
        <span class="<%= @resume.active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> px-3 py-1 rounded-full text-sm font-medium">
          <%= @resume.active ? 'Aktif' : 'Pasif' %>
        </span>
      </div>
      <div>
        <h3 class="font-semibold text-gray-700">Okullar</h3>
        <div class="bg-gray-50 p-3 rounded text-gray-600">
          <% if @resume.resume_schools.any? %>
            <ul class="list-disc pl-5">
              <% @resume.resume_schools.each do |resume_school| %>
                <li><%= resume_school.school.name %></li>
              <% end %>
            </ul>
          <% else %>
            Okul bilgisi yok
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-8 flex justify-end space-x-4">
    <%= link_to edit_resume_path(@resume), class: 'flex items-center px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition duration-300' do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
      </svg>
      Düzenle
    <% end %>
    <%= link_to 'Geri', resumes_path, class: 'px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition duration-300' %>
  </div>
</div>