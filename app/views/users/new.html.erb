<h2 class="text-2xl font-bold mb-4">Sign Up</h2>

<%= form_with(model: @user, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |f| %>
  <% if @user.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <strong class="font-bold">Please correct the following errors:</strong>
      <ul class="mt-2">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :first_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{'border-red-500' if @user.errors[:first_name].any?}" %>
  </div>

  <div class="mb-4">
    <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :last_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{'border-red-500' if @user.errors[:last_name].any?}" %>
  </div>

  <div class="mb-4">
    <%= f.label :identity_number, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :identity_number, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{'border-red-500' if @user.errors[:email].any?}" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{'border-red-500' if @user.errors[:email].any?}" %>
  </div>

  <div class="mb-4">
    <%= f.label :gsm, "Mobile Phone", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.telephone_field :gsm, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{'border-red-500' if @user.errors[:gsm].any?}", placeholder: "+XX XXXXXXXXXX" %>
    <% if @user.errors[:gsm].any? %>
      <p class="text-red-500 text-xs italic mt-1"><%= @user.errors[:gsm].join(', ') %></p>
    <% end %>
    <p class="text-gray-600 text-xs italic mt-1">Format: +XX XXXXXXXXXX (e.g., +90 5555555555)</p>
  </div>

  <div class="mb-4">
    <%= f.label :country, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :country, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{'border-red-500' if @user.errors[:country].any?}" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{'border-red-500' if @user.errors[:password].any?}" %>
  </div>

  <div class="mb-6">
    <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{'border-red-500' if @user.errors[:password_confirmation].any?}" %>
  </div>

  <div class="flex items-center justify-between">
    <%= f.submit "Sign Up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
  </div>
<% end %>